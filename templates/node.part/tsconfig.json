{
  "compilerOptions": {
    "strict": true,
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "importHelpers": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "types"
  },
  "include": [
    "src/**/*.ts"
  ]
}
